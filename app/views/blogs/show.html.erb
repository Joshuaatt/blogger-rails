<h1><%= @blog.title %></h1>
<p><%= @blog.date %></p>
<p><%= @blog.body %></p>

<p><%= link_to 'Edit', edit_blog_path(@blog) %></p>
<p><%= link_to 'Delete', blog_path(@blog), data: { confirm: "Are you sure?", method: "delete" } %></p>


<% if @blog.comments.any? %>

  <% @blog.comments.each do |comment| %>
    <p><%= comment.comment_body %></p>
    <p><%= link_to 'Edit comment', edit_blog_comment_path(@blog, comment) %></p>
    <p><%= link_to 'Delete comment', blog_comment_path(@blog, comment), data: { confirm: "Are you sure?", method: "delete" } %></p>
  <% end %>
<% end %>

<p><%= link_to 'Add comment', new_blog_comment_path(@blog, @comment) %>

<p><%= link_to 'Return to main page', blogs_path %></p>
